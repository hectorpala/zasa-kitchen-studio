{
  "public": true,
  "rewrites": [
    {
      "source": "/colonias/:slug/",
      "destination": "/colonias/:slug.html"
    },
    {
      "source": "/colonias/:slug",
      "destination": "/colonias/:slug.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(css|js|jpg|jpeg|png|gif|bmp|tiff|svg|webp|avif|woff2?|ttf|eot|otf|ico|manifest|pdf|zip|rar|mp4|mov|avi|webm))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(json|xml))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        }
      ]
    },
    {
      "source": "/(robots.txt|sitemap.xml)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}