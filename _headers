/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self'

# Caché optimizado para imágenes (1 año)
/(.*)\.(jpg|jpeg|png|gif|bmp|tiff)
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept

# Caché optimizado para WebP y formatos modernos
/(.*)\.(webp|avif)
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept
  Content-Type: image/webp

# Caché para CSS y JS con versioning (1 año)
/(.*)\.(css|js)
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Caché para fuentes (1 año)
/(.*)\.(woff2|woff|ttf|eot|otf)
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Caché para otros assets estáticos (1 año)
/(.*)\.(svg|ico|manifest|pdf|zip|rar|mp4|mov|avi|webm)
  Cache-Control: public, max-age=31536000, immutable

# Caché para JSON y XML (30 días)
/(.*)\.(json|xml)
  Cache-Control: public, max-age=2592000
