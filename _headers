/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self'

# Compresión optimizada para imágenes
/(.*)\.(jpg|jpeg|png)
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept

# Compresión y prioridad para WebP
/(.*)\.(webp)
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept
  Content-Type: image/webp

# Compresión para CSS y JS
/(.*)\.(css|js)
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Compresión para fuentes
/(.*)\.(woff2|woff|ttf|eot)
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Otros assets
/(.*)\.(svg|ico|manifest)
  Cache-Control: public, max-age=31536000, immutable
